@model List<SurveyHeader>
<h1>Survey List</h1>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Survey Name
			</th>
			<th>
				Survey Description
			</th>
			<th>
				Edit Survey
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td>
					@obj.SurveyName
				</td>
				<td>
					@obj.SurveyDescription
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Survey" asp-action="Edit" asp-route-id="@obj.SurveyId" class="btn btn-primary mx-2">
							Edit
						</a>
						<a asp-controller="Survey" asp-action="Delete" class="btn btn-danger mx-2">
							Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>