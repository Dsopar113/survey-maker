@model List<Participant>
<div class="container">
	<div class="row pt-4 pb-23">
		<div class="col-6">
			<h2 class="text-primary">
				Participants
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="SurveyParticipant" asp-action="AddParticipant" class="btn btn-primary">
				Add Participant
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				First Name
			</th>
			<th>
				Last Name
			</th>
			<th>
				Mail
			</th>
			<th>
				Assign To
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td>
					@obj.ParticipantName
				</td>
				<td>
					@obj.ParticipantLastName
				</td>
				<td>
					@obj.ParticipantMail
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="SurveyParticipant" asp-action="AssignParticipant" asp-route-id="@obj.ParticipantId" class="btn btn-primary mx-2">
							Assign
						</a>
						<a asp-controller="SurveyParticipant" asp-action="Edit" asp-route-id="@obj.ParticipantId" class="btn btn-primary mx-2">
							Edit
						</a>
						<a asp-controller="SurveyParticipant" asp-action="Delete" asp-route-id="@obj.ParticipantId" class=" btn btn-danger mx-2">
							Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>